<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:id="@+id/video7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_list"
            android:clickable="true"
            android:onClick="play7"
            android:orientation="horizontal"
            android:tag="7">

            <ImageView
                android:layout_width="334dp"
                android:layout_height="116dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:paddingRight="5sp"
                android:src="@drawable/got7_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="남자아티스트관 전시물1"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" GOT7"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

        <LinearLayout
            android:id="@+id/video8"
            android:tag="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="play8"
            android:background="@drawable/shape_list">

            <ImageView
                android:layout_width="334dp"
                android:layout_height="116dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:paddingRight="5sp"
                android:src="@drawable/day6_logo" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="남자아티스트관 전시물2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" DAY6"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

        <LinearLayout
            android:id="@+id/video9"
            android:tag="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="play9"
            android:background="@drawable/shape_list">

            <ImageView
                android:layout_width="334dp"
                android:layout_height="116dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:paddingRight="5sp"
                android:src="@drawable/straykids_logo" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="남자아티스트관 전시물3"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" STRAYKIDS"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
