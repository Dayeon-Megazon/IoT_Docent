<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:id="@+id/video1"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"

        android:tag="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:scaleType="fitXY"
            android:src="@drawable/number1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="제 1 전시관"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="JYP NATION"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/watch1"
            android:layout_width="144dp"
            android:layout_height="43dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="170dp"
            android:background="@color/button"
            android:gravity="center"
            android:text="관람하기"
            android:textColor="@color/white" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:id="@+id/video2"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:tag="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/number2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="제 2 전시관"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="325dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="Female Artists"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/watch2"
            android:layout_width="144dp"
            android:layout_height="43dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="170dp"
            android:background="@color/button"
            android:gravity="center"
            android:text="관람하기"
            android:textColor="@color/white" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:id="@+id/video3"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:tag="3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/number3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="제 3 전시관"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="Male Artists"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/watch3"
            android:layout_width="144dp"
            android:layout_height="43dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="170dp"
            android:background="@color/button"
            android:gravity="center"
            android:text="관람하기"
            android:textColor="@color/white" />

    </RelativeLayout>
</LinearLayout>



