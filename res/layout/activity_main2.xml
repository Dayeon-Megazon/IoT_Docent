<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:id="@+id/video4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_list"
            android:clickable="true"
            android:onClick="play4"
            android:orientation="horizontal"
            android:tag="4">

            <ImageView
                android:layout_width="334dp"
                android:layout_height="116dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:paddingRight="5sp"
                android:src="@drawable/wodergirls_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="여자 아티스트관 전시물1"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" WONDER GIRLS"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

        <LinearLayout
            android:id="@+id/video5"
            android:tag="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="play5"
            android:background="@drawable/shape_list">

            <ImageView
                android:layout_width="334dp"
                android:layout_height="116dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:paddingRight="5sp"
                android:src="@drawable/twice_logo" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="여자 아티스트관 전시물2"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" TWICE"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

        <LinearLayout
            android:id="@+id/video6"
            android:tag="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:onClick="play6"
            android:background="@drawable/shape_list">

            <ImageView
                android:layout_width="334dp"
                android:layout_height="116dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:paddingRight="5sp"
                android:src="@drawable/itzy_logo" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="여자 아티스트관 전시물3"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" ITZY"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
